# legiscope environment configuration
# Copy to .env and modify as needed

# LLM Provider: openai or mistral
LEGISCOPE_LLM_PROVIDER=mistral

# Fast Model (optional): Overrides provider default
# Examples: gpt-4.1-mini, mistral-medium-latest
# LEGISCOPE_FAST_MODEL=

# Powerful Model (optional): Overrides provider default
# Examples: gpt-4.1, magistral-medium-latest
# LEGISCOPE_POWERFUL_MODEL=

# Embedding Provider: ollama or mistral
LEGISCOPE_EMBEDDING_PROVIDER=mistral

# Embedding Model (optional): Overrides provider default
# Examples: mistral-embed, embeddinggemma
# LEGISCOPE_EMBEDDING_MODEL=

# ChromaDB Collection Name: legal_code_mistral or legal_code_ollama
LEGISCOPE_COLLECTION_NAME=legal_code_mistral

# Query Settings
LEGISCOPE_N_RESULTS=10
LEGISCOPE_USE_HYDE=false

# API Keys (uncomment and set)
# OPENAI_API_KEY=your-openai-api-key-here
# MISTRAL_API_KEY=your-mistral-api-key-here